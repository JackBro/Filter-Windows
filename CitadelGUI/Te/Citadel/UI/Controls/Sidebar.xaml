<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Te.Citadel.Te.Citadel.UI.Controls"
                    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">
    
    <SolidColorBrush x:Key="SidebarButtonBrush" Color="{StaticResource WhiteColor}" options:Freeze="True"/>
    
    <Style x:Key="SidebarButton" TargetType="{x:Type ToggleButton}">
        <Setter Property="Background" Value="{DynamicResource SidebarButtonBrush}"/>
    </Style>
</ResourceDictionary>